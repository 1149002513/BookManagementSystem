<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Mapper.BookMapper">

    <!--增加图书-->

    <insert id="addBook" parameterType="book">
        insert  into book (id,name,cover,lend,price,count) values (#{id},#{name},#{cover},#{lend},#{price},#{count})
    </insert>

    <!--借图书-->
    
    <update id="borrowBook" parameterType="string">
        update book set lend = 1 and count=count+1 where id = #{id}
    </update>

    <!--还书-->
    <update id="re" parameterType="string">
        update book set lend = 0 where id = #{id}
    </update>

</mapper>